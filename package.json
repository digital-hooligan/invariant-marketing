{
  "name": "invariant-marketing",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prebuild": "pnpm run env:check",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "env:check": "node tooling/env-contract/validate.mjs --mode=check",
    "env:validate:local": "node tooling/env-contract/validate.mjs --mode=runtime --tier=local",
    "env:validate:preview": "node tooling/env-contract/validate.mjs --mode=runtime --tier=preview",
    "env:validate:production": "node tooling/env-contract/validate.mjs --mode=runtime --tier=production",
    "guardrails:e1": "node scripts/guardrails/scan-prohibited-patterns.mjs",
    "guardrails:e1:test": "node --test scripts/guardrails/tests/*.test.mjs"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.23.8",
    "gray-matter": "^4.0.3",
    "next-mdx-remote": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  }
}
